<div class="container" id="feedback">
  <div class="row">
    <div class="col-sm-4">
      <h1 class="feedback-form-title">Send us feedback</h1>
      
      <form class="feedback-form" action="feedback" method="POST">
        <div class="form-group">
          <label for="feedback-form-name" {{#if error}} {{#unless fbName }} style="color:red" {{/unless}} {{/if}}>Name</label>
          <input type="text" class="form-control" id="feedback-form-name" placeholder="Enter your name" name="fbName" {{#if fbName }} value="{{ fbName }}" {{/if }}>
        </div>
        <div class="form-group">
          <label for="feedback-form-title" {{#if error}} {{#unless fbTitle }} style="color:red" {{/unless}} {{/if}}>Title</label>
          <input type="text" class="form-control" id="feedback-form-title" placeholder="Title of your feedback" name="fbTitle" {{#if fbTitle }} value="{{ fbTitle }}" {{/if }}>
        </div>
        <div class="form-group">
          <label for="feedback-form-message" {{#if error}} {{#unless fbMessage }} style="color:red" {{/unless}} {{/if}}>Message</label>
          <textarea type="text" placeholder="Enter your message, then hit the submit" class="form-control"
            id="feedback-form-message" rows="6" name="fbMessage">{{#if fbMessage }}{{ fbMessage }}{{/if }}</textarea>
        </div>
        <button type="submit" class="btn btn-default pull-right">Submit</button>
        {{#if error }}<div style="color: red">Please fill in all the required fields.</div>{{/if }}
        {{#if success }}<div style="color: green">Thank you for your feedback.</div>{{/if }}
      </form>
    </div>
    <!-- primary -->
    <aside class="col-sm-8">
      <div class="maincontent feedback">
        <h2 class="article-title">{{ pageTitle }}</h2>
        <div class="feedback-messages">
          {{#if feedbacks.length }}
          {{#each feedbacks }}
          <div class="feedback-item item-list media-list">
            <div class="feedback-item media">
              <div class="feedback-info media-body">
                <div class="feedback-head">
                  <div class="feedback-title">{{this.title}} <small class="feedback-name label label-info">{{this.name}}</small></div>
                </div>
                <div class="feedback-message">{{this.message}}</div>
              </div>
            </div>
          </div>
          {{/each }}
          {{/if }}
        </div>
      </div>
    </aside>
    <!-- secondary -->
  </div>
</div>